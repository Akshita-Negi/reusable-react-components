{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "semi": "off",
    "comma-dangle": "off",
    "import/no-extraneous-dependencies": "off",
    "space-before-function-paren": "off",
    "react/jsx-filename-extension": "off",
    "jsx-quotes": "off"
  }
}